{
  "name": "json-visualizer",
  "displayName": "JSON Visualizer",
  "description": "Visualize JSON data as interactive diagrams",
  "version": "1.0.0",
  "publisher": "haknkayaa",
  "engines": {
    "vscode": "^1.96.0"  
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/haknkayaa/JSONVisualizerForVSCode"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsonvisualizer.openPreview",
        "title": "Open JSON Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .json",
          "command": "jsonvisualizer.openPreview",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.17",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "css-loader": "^6.11.0",
    "eslint": "^9.19.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "html-to-image": "^1.11.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0",
    "reactflow": "^11.7.0"
  },
  "galleryBanner": {
    "color": "#1A1A1A",
    "theme": "dark"
  },
  "markdown": "github",
  "badges": [],
  "screenshots": [
    {
      "path": "images/image.png",
      "label": "JSON Visualizer Demo"
    }
  ]
}
